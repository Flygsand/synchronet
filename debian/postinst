#!/bin/sh
# postinst script for synchronet
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)
    # Create ctrl/ directory if not already present
    if [ ! -d "/opt/synchronet/ctrl/" ]; then
	# Create ctrl/ directory
	mkdir --mode=755 /opt/synchronet/ctrl
	# Populate the ctrl directory with an intial set of files
	cp /usr/share/synchronet/ctrl/* /opt/synchronet/ctrl
	# Copy to the ctrl directory some example files.
	cp /usr/share/doc/synchronet/examples/sbbs.ini /opt/synchronet/ctrl
	cp /usr/share/doc/synchronet/examples/sbbsecho.cfg /opt/synchronet/ctrl
    fi
    # Create text/ directory if not already present
    if [ ! -d "/opt/synchronet/text/" ]; then
	# Create text/ directory
	mkdir --mode=755 /opt/synchronet/text
	# Populate the ctrl directory with an intial set of files
	cp -r /usr/share/synchronet/text/* /opt/synchronet/text
    fi
    # Create web/ directory if not already present
    if [ ! -d "/opt/synchronet/web/" ]; then
	# Create web/ directory
	mkdir --mode=755 /opt/synchronet/web
	# Populate the web directory with an intial set of files
	cp -r /usr/share/synchronet/web/* /opt/synchronet/web
    fi
    
    # Run the baja source makefile after installs/upgrades.
    make -C /opt/synchronet/exec

    #  Set default user:group for Synchronet directory tree
    chown -R sbbs:sbbs /opt/synchronet

    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0


